{
  "name": "claude-auto-global",
  "version": "1.0.0",
  "description": "Automatic Claude API management with smart context detection",
  "main": "index.js",
  "bin": {
    "claude-auto": "./bin/claude-auto.js"
  },
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration", 
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:report": "playwright show-report",
    "setup": "node setup.js",
    "setup-playwright": "npx playwright install && npx playwright install-deps",
    "install-agents": "node scripts/install-agents.js",
    "install-agent": "node scripts/install-agents.js --agent",
    "update-agents": "node scripts/install-agents.js --update",
    "agent-status": "node scripts/install-agents.js --status",
    "validate-agents": "node scripts/install-agents.js --validate",
    "lint": "eslint . --ext .js --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js --ignore-path .gitignore --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "dev": "node bin/claude-auto.js --dev",
    "build": "echo \"No build step required for CLI tool\"",
    "prepublishOnly": "npm run lint && npm run test:unit && npm run validate-agents",
    "postinstall": "node -e \"console.log('\\nðŸ¤– Claude Auto Global installed! Run \\\"claude-auto --setup\\\" to get started.\\n')\"",
    "docs:serve": "python -m http.server 8080 -d docs",
    "docs:build": "echo \"Documentation is ready to serve\"",
    "clean": "rm -rf node_modules package-lock.json test-results playwright-report coverage",
    "reset": "npm run clean && npm install",
    "version": "echo $npm_package_version"
  },
  "keywords": [
    "claude",
    "anthropic",
    "ai",
    "api",
    "cli",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "jest": "^29.7.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  },
  "optionalDependencies": {
    "playwright": "^1.40.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "bin/",
    "lib/",
    "agents/",
    "scripts/",
    "setup.js",
    "playwright.config.js",
    "README.md"
  ]
}